{
  "name": "design-tokens-local",
  "version": "1.2.0",
  "type": "module",
  "description": "",
  "main": "build/tokens.js",
  "scripts": {
    "build-node": "node_modules/.bin/style-dictionary build",
    "clean": "rm -rf build",
    "build-dictionary": "style-dictionary build --config ./config.json",
    "dev": "npm run transform && npm run build-dictionary",
    "build": "npm run build-dictionary",
    "transform": "npx token-transformer tokens/tokens.json tokens/output.json",
    "prepublishOnly": "npm run build-node"
  },
  "author": "Riccardo Erra",
  "dependencies": {
    "token-transformer": "^0.0.27",
    "style-dictionary": "^3.7.1"
  }
}
